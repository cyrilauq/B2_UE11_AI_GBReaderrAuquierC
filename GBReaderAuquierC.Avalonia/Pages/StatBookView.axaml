<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GBReaderAuquierC.Avalonia.Pages.StatBookView">
    <StackPanel>
        <TextBlock x:Name="Title"/>
        <StackPanel Orientation="Horizontal">
            <Image x:Name="Cover"/>
            <Grid ColumnDefinitions="50*, 50*" RowDefinitions="50*, 50*">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Commencé: " />
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="Begin"></TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Dernière lecture: " />
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LastUpdate"></TextBlock>
            </Grid>
        </StackPanel>
    </StackPanel>
</UserControl>
