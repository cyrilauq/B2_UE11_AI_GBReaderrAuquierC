<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="180" d:DesignHeight="140" Width="180" Height="140"
             x:Class="GBReaderAuquierC.Avalonia.DescriptionBookView">
    <StackPanel x:Name="Main">
        <StackPanel Orientation="Vertical"
                    Background="White"
                    PointerPressed="DisplayDetails"
                    Height="90">
            <Image Width="80" Height="90" x:Name="Image" />
            <TextBlock x:Name="Title" TextWrapping="WrapWithOverflow">Title</TextBlock>
            <TextBlock x:Name="Author" TextWrapping="WrapWithOverflow">Author</TextBlock>
            <TextBlock x:Name="Isbn">1-234567-98-X</TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>
