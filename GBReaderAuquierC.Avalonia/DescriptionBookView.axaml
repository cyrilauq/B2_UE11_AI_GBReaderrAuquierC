<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="90" Width="250" Height="90"
             x:Class="GBReaderAuquierC.Avalonia.DescriptionBookView">
    <StackPanel x:Name="Main" 
                PointerLeave="DisplayDetails" 
                PointerEnter="DisplayResume"
                Width="250"
                Height="90">
        <StackPanel Orientation="Horizontal">
            <Image Width="40" Height="80" x:Name="Image" />
            <Grid x:Name="Details" 
                  RowDefinitions="25, 25, 25">
                <TextBlock Grid.Row="0" x:Name="Title">Title</TextBlock>
                <TextBlock Grid.Row="1" x:Name="Author">Author</TextBlock>
                <TextBlock Grid.Row="2" x:Name="Isbn">1-23456-78-9</TextBlock>
            </Grid>
        </StackPanel>
        <TextBlock x:Name="Resume" 
                   IsVisible="False"
                   Width="250"
                   Height="90"
                   TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
